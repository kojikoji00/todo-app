%h1 Brankets
.board
  - if @task.eyecatch.attached?
    .board_image
      = image_tag @task.eyecatch
  .board_detail
    .board_detail_title
      %p= @board.title
      .board_detail_content
        %p= @board.content
        = image_tag 'default-avatar.png'

  - if user_signed_in? && current_user.has_written?(@board)
    .board_detail_actions
      .dropdown
        = image_tag 'actions.svg', class: 'dropbtn'
        .dropdown-content.mini
          = link_to '編集する', edit_board_path(@board)
          = link_to '削除する', board_path(@board) , data: { method: 'delete', confirm: '本当に削除してもよろしいですか' }

.board
  %h2 コメント一覧
  - @tasks.each do |task|
    .board_task
      .board_task_name
        %p= task.name
        .board_task_content
          %p= task.content

.container
  = link_to new_board_task_path(@board) do
    .add_card
      %h2 + Add new card