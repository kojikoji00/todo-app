= link_to task_path(board_id: @board.id, id: task.id) do
  .board
    .board_detail_name
      %p= task.name
    - if task.eyecatch.attached?
      .eyecatch
        = image_tag task.eyecatch
      .board_detail_content
        %p= task.content
      - if user_signed_in? && current_user.has_written?(@board)
        .board_detail_actions
          .dropdown
            = image_tag 'actions.svg', class: 'dropbtn'
            .dropdown-content.mini
              = link_to '編集する', edit_task_path(task)
              = link_to '削除する', task_path(task), data: { method: 'delete', confirm: '本当に削除してもよろしいですか' }