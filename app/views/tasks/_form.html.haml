.cantainer
  %url
    - @task.errors.full_messages.each do |message|
      %li= message

  = form_with(model: task, url: board_tasks_path, local: true) do |f|
    %div
      = f.label :eyecatch, 'アイキャッチ'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :name, 'Name'
    %div
      = f.text_field :name
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    = f.submit '保存', class: 'btn-primary'